<%- include('partials/header') %>
    <h1>Compose</h1>
    <form method="post" action="/compose">
        <div class="form-group">
            <label for="journalTitle">Title</label>
            <input type="text" class="form-control" id="journalTitle" name="journalTitle" placeholder="Enter Title">
        </div>
        <div class="form-group">
            <label for="journalBody">Journal</label>
            <textarea class="form-control" name="journalBody" id="journalBody" cols="30" rows="10"
                placeholder="Your story starts here"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
    </form>
    <%- include('partials/footer') %>